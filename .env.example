# Lead Generation System - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/leadgen
# For Railway: postgresql://user:pass@host:port/database

# ===========================================
# AI / CLAUDE API
# ===========================================
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# AI ARK (Primary B2B Lead Source)
# ===========================================
AI_ARK_API_KEY=your_ai_ark_api_key_here
AI_ARK_BASE_URL=https://api.ai-ark.com/v1

# ===========================================
# BRIGHT DATA (LinkedIn Scraping)
# ===========================================
BRIGHT_DATA_USERNAME=your_username
BRIGHT_DATA_PASSWORD=your_password
BRIGHT_DATA_HOST=brd.superproxy.io
BRIGHT_DATA_PORT=22225

# ===========================================
# GOOGLE MAPS API
# ===========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=Lead Generation System
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# RATE LIMITING
# ===========================================
# Requests per minute for each scraper
GOOGLE_MAPS_RATE_LIMIT=60
LINKEDIN_RATE_LIMIT=30
WEBSITE_RATE_LIMIT=100
AI_ARK_RATE_LIMIT=100

# ===========================================
# REDIS (for background jobs)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# STREAMLIT DASHBOARD
# ===========================================
STREAMLIT_PORT=8501
